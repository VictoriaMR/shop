server {
    listen 80;
    server_name newsme.com shalight.com;
    return 307 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name www.newsme.com;
    client_max_body_size 20m;
    ssl_certificate ssl/server.crt;
    ssl_certificate_key ssl/server.key;
    ssl_protocols SSLv3 SSLv2 TLSv1 TLSv1.1 TLSv1.2;
    add_header Access-Control-Allow-Origin *;
    add_header Access-Control-Allow-Methods '*';
    access_log on;
    set $template 'newsme';
    set $root_path 'D:/www/shop';

    location = / {
        rewrite ^/(.*)$ /index.html?/$1 last;
        break;
    }

    location ~* \.(html)$ {
        set $driver 'computer';
        if ($http_user_agent ~* (android|phone|mobile|iphone|ipod|ipad|mobi|tablet|touch|aarch64|kfapwi)) {
            set $driver 'mobile';
        }
        set $language 'en';
        if ($cookie_lan != '') {
            set $language $cookie_lan;
        }
        root $root_path/template/$template/cache/$driver/$language;
        if (!-e $request_filename) {
            rewrite ^/(.*)$ /index.php?/$1 last;
            break;
        }
        expires 1d;
    }

    location /socket.io/ {
        proxy_pass http://127.0.0.1:12008/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header X-real-ip $remote_addr;
        proxy_set_header X-Forwarded-For $remote_addr;
    }

    location ~* \.(xml)$ {
        root $root_path/template/$template/sitemap;
    }

    location ~* \.(js|css|ico|jpg|png|jpeg|eot|svg|ttf|woff|woff2)$ {
        expires 15d;
        set $root D:/www/shop/template/$template;
        if ($request_uri ~ (/product|introduce|avatar|banner|category/)) {
            set $root D:/www/shop/storage;
        }
        root $root;
    }

    location ~ \.php$ {
        root $root_path;
        fastcgi_pass   127.0.0.1:9000; 
        fastcgi_index  index.php;
        fastcgi_param  SCRIPT_FILENAME $document_root$fastcgi_script_name; 
        include        fastcgi_params;
    }

    location / {
        rewrite ^/(.*)$ /index.php?/$1 last;
        break;
    }
}